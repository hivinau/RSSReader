<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@color/card"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/rss_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/rss_title"
            android:textColor="@color/rss_title"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/rss_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/rss_date"
            android:textColor="@color/rss_date"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/rss_description_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/rss_description"
            android:textColor="@color/rss_description"/>

    </LinearLayout>

</android.support.v7.widget.CardView>